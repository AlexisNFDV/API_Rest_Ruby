

<h1>Computers Search </h1>
<br/>


<div class="container">
     <div class="col-sm">
        <form action="/show_with_filter">


        <div class="form-group">
        <label for="computer_processor">Select Processor</label>
          <select class="form-control" name="computer[processor]" id="computer_processor">
            <option></option>
            <option>intel</option>
            <option>amd</option>
            <option>arm</option>
          </select>
        </div>
      
        <div class="form-group">
        <label for="computer_storage">Select Storage</label>
          <select class="form-control" name="computer[storage]" id="computer_storage">
            <option></option>
            <option>64</option>
            <option>128</option>
            <option>256</option>
            <option>512</option>
            <option>1000</option>
          </select>
        </div>
      
        <div class="form-group">
        <label for="computer_ram">Select Ram</label>
          <select class="form-control" name="computer[ram]" id="computer_ram">
            <option></option>
            <option>4</option>
            <option>8</option>
            <option>16</option>
            <option>32</option>
            <option>64</option>
          </select>
        </div>
      
      
        <div class="form-group">
        <label for="computer_size">Select Size (screen size)</label>
          <select class="form-control" name="computer[size]" id="computer_size">
          <option></option>
            <option>11</option>
            <option>14</option>
            <option>15</option>
            <option>16</option>
            <option>17</option>
          </select>
        </div>
      
      
        <button type="submit" class="btn btn-primary">Search computer</button>
      
      </form>
    </div>


</div>