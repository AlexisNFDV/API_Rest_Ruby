

<h1>Computers Search </h1>



<form action="/show_with_filter">

  <div class="field">
    <label for="computer_processor">Processor</label>
    <input type="text" name="computer[processor]" id="computer_processor" />
  </div>

  <div class="field">
    <label for="computer_storage">Storage</label>
    <input type="number" name="computer[storage]" id="computer_storage" />
  </div>

  <div class="field">
    <label for="computer_ram">Ram</label>
    <input type="number" name="computer[ram]" id="computer_ram" />
  </div>

  <div class="field">
    <label for="computer_size">Size</label>
    <input type="number" name="computer[size]" id="computer_size" />
  </div>

  <button type="submit">Search computer</button>


  <form class="form-inline my-2 my-lg-0">
  <input  class="form-control mr-sm-2"
    type="search"
    placeholder="Search"
    aria-label="Search"
   />
   <button 
     class="btn btn-outline-success my-2 my-sm-0" 
     type="submit">
       Search
   </button>
</form>

</form>