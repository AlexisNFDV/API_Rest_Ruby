

<h1>Computers show with_filter</h1>
<br/>

<%= params[:computer].inspect %>

<div class="container">
 <div class="col-sm">

    <table class="table">
      <thead>
        <tr>
          <th scope="col" >Name</th>
          <th scope="col" >Processor</th>
          <th scope="col" >Storage</th>
          <th scope="col">Ram</th>
          <th scope="col" >Size</th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @computers.each do |computer| %>
          <tr>
            <td scope="col" ><%= computer.name %></td>
            <td scope="col" ><%= computer.processor %></td>
            <td scope="col" ><%= computer.storage %></td>
            <td scope="col" ><%= computer.ram %></td>
            <td scope="col" ><%= computer.size %></td>
            <td scope="col" ><%= link_to 'Show', computer %></td>
            <td scope="col" ><%= link_to 'Edit', edit_computer_path(computer) %></td>
            <td scope="col" ><%= link_to 'Destroy', computer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <a class="btn btn-primary" href="/with_filter" role="button">New Search</a>
    </div>
</div>