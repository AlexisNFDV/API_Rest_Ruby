<p id="notice"><%= notice %></p>

<h1>Computers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Processor</th>
      <th>Storage</th>
      <th>Ram</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @computers.each do |computer| %>
      <tr>
        <td><%= computer.name %></td>
        <td><%= computer.processor %></td>
        <td><%= computer.storage %></td>
        <td><%= computer.ram %></td>
        <td><%= computer.size %></td>
        <td><%= link_to 'Show', computer %></td>
        <%if policy(computer).edit?%>
          <td><%= link_to 'Edit', edit_computer_path(computer) %></td>
        <%end%>
        <%if policy(computer).destroy?%>
          <td><%= link_to 'Destroy', computer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if policy(Computer).create?%>
  <%= link_to 'New Computer', new_computer_path %>
<%end%>
